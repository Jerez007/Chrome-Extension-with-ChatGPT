{
    "manifest_version": 2,
    "name": "USD to CAD Converter",
    "version": "1.0",
    "description": "Converts USD to CAD",
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "permissions": ["activeTab"],
    "content_scripts": [
      {
        "matches": ["https://*/*"],
        "js": ["popup.js"],
        "css": ["styles.css"]
      }
    ]
  }
  